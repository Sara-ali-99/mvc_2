@{
    int index = 1;
}
<h1> departments</h1>

<table>
    <thead>
        <tr>
            <th class="p-4">#</th>
            <th class ="p-4">Name</th>
            <th class="p-4">Location</th>
            @*<th class="p-4">start date</th>
            <th class="p-4">manager</th>*@

        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td class="p-4">@(index++)</td>
                <td class="p-4">@dept.Name</td>
                <td class="p-4">@dept.DepartmentLocations</td>
               @* <td class ="p-4">@dept.startDate</td>*@
                <td class="p-4">@dept.employee.FirstName @dept.employee.MiddleName@dept.employee.LastName</td>
                <td>@Html.ActionLink("update", "updateForm", "Department", new {id = dept.Number})</td>
                <td>@Html.ActionLink("delete", "deleteDepartment", "Department",  new {id = dept.Number})</td>
            </tr>
        }
        <tr>
            <td>
                @Html.ActionLink("Add  department", "addDepartmentForm", "Department")
            </td>
        </tr>
    </tbody>
</table>